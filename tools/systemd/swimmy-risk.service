[Unit]
Description=Swimmy Risk Gateway Service (Graham)
After=network.target

[Service]
Type=simple
WorkingDirectory=/home/swimmy/swimmy
ExecStart=/home/swimmy/swimmy/.venv/bin/python3 tools/risk_gateway.py
Restart=always
RestartSec=5
EnvironmentFile=/home/swimmy/swimmy/.env
# Logs
StandardOutput=append:/home/swimmy/swimmy/logs/risk.log
StandardError=append:/home/swimmy/swimmy/logs/risk.log

[Install]
WantedBy=default.target
