[Unit]
Description=Swimmy Polymarket Weather Snapshot Collector
After=network.target

[Service]
Type=oneshot
User=swimmy
Group=swimmy
WorkingDirectory=/home/swimmy/swimmy
ExecStart=/home/swimmy/swimmy/.venv/bin/python3 /home/swimmy/swimmy/tools/polymarket_weather_snapshot.py --output-dir /home/swimmy/swimmy/data/snapshots/polymarket_weather --orderbook-mode all --orderbook-depth 10
Environment=HOME=/home/swimmy
EnvironmentFile=/home/swimmy/swimmy/.env

StandardOutput=append:/home/swimmy/swimmy/logs/polymarket_weather_snapshot.log
StandardError=append:/home/swimmy/swimmy/logs/polymarket_weather_snapshot.log

