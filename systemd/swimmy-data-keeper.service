[Unit]
Description=Swimmy Data Keeper Service (Article 5 Compliant)
After=network.target

[Service]
Type=simple
WorkingDirectory=%h/swimmy
ExecStart=%h/swimmy/.venv/bin/python3 %h/swimmy/tools/data_keeper.py
Restart=always
RestartSec=10
StartLimitIntervalSec=300
StartLimitBurst=5
Environment=PYTHONUNBUFFERED=1
EnvironmentFile=%h/swimmy/.env
StandardOutput=append:%h/swimmy/logs/data_keeper.log
StandardError=append:%h/swimmy/logs/data_keeper.log

[Install]
WantedBy=default.target
