[Unit]
Description=Swimmy Pending Manager (LÃ³pez de Prado)
After=network.target
StartLimitIntervalSec=300
StartLimitBurst=5

[Service]
Type=simple
WorkingDirectory=/home/swimmy/swimmy
ExecStart=/usr/bin/python3 /home/swimmy/swimmy/tools/pending_manager.py
Restart=always
RestartSec=10
Environment=PYTHONUNBUFFERED=1
StandardOutput=append:/home/swimmy/swimmy/logs/pending_manager.log
StandardError=append:/home/swimmy/swimmy/logs/pending_manager.log

[Install]
WantedBy=default.target
