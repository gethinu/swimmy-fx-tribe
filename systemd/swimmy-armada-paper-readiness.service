[Unit]
Description=Swimmy Armada Paper Readiness Daily Job
After=network.target

[Service]
Type=oneshot
User=swimmy
WorkingDirectory=/home/swimmy/swimmy
ExecStart=/home/swimmy/swimmy/tools/ops/armada_paper_readiness_runner.sh
Environment=HOME=/home/swimmy
EnvironmentFile=-/home/swimmy/swimmy/config/.env.systemd
StandardOutput=append:/home/swimmy/swimmy/logs/armada_paper_readiness.log
StandardError=append:/home/swimmy/swimmy/logs/armada_paper_readiness.log
