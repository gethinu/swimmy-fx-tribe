# Example: systemd-only environment (DO NOT COMMIT secrets)
#
# Create config/.env.systemd (chmod 600) and put sensitive values there
# instead of systemd unit files or tracked docs.
#
# Discord webhooks (tokens are embedded in the URL; treat as secrets)
SWIMMY_DISCORD_ALERTS=
#
# Notifier ZMQ port (tools/notifier.py listens here)
SWIMMY_PORT_NOTIFIER=5562

# ArmadaAC experimental switch (keep OFF in normal production run)
SWIMMY_ARMADA_CANARY_MODE=0
# Optional explicit toggles:
# SWIMMY_ARMADA_CORE_PROFILE_ENABLED=1
# SWIMMY_ARMADA_KILL_SWITCH_ENABLED=1

# Trend Arbitrage (X + Site + Newsletter)
TREND_ARB_DRY_RUN=1
TREND_ARB_SCAN_ONLY=0
TREND_ARB_PUBLISH_SITE=1
TREND_ARB_PUBLISH_X=1
TREND_ARB_PUBLISH_NEWSLETTER=1
TREND_ARB_MAX_CANDIDATES=12
TREND_ARB_TOP_N=3
TREND_ARB_REPUBLISH_HOURS=72
TREND_ARB_GEO=JP
TREND_ARB_LANG=ja
TREND_ARB_MIN_INTENT=0.55
TREND_ARB_MIN_OPPORTUNITY=0.50
TREND_ARB_SEED_QUERIES=副業 AI,AI ツール 比較,業務自動化 テンプレ,価格比較 ツール,アフィリエイト 収益化
TREND_ARB_SERP_PROVIDER=auto
TREND_ARB_SERP_TIMEOUT_SEC=8
TREND_ARB_SITE_BASE_URL=https://example.com/trend-arbitrage

# X posting: choose webhook or OAuth1
TREND_ARB_X_WEBHOOK_URL=
TREND_ARB_X_CONSUMER_KEY=
TREND_ARB_X_CONSUMER_SECRET=
TREND_ARB_X_ACCESS_TOKEN=
TREND_ARB_X_ACCESS_TOKEN_SECRET=

# Newsletter SMTP
TREND_ARB_NEWSLETTER_TO=
TREND_ARB_SMTP_HOST=
TREND_ARB_SMTP_PORT=587
TREND_ARB_SMTP_USER=
TREND_ARB_SMTP_PASS=
TREND_ARB_SMTP_FROM=
TREND_ARB_SMTP_TLS=1

# System audit thresholds
BACKTEST_HEARTBEAT_MAX_LOG_AGE_SECONDS=600
BACKTEST_HEARTBEAT_MAX_RX_AGE_SECONDS=300
BACKTEST_HEARTBEAT_MAX_TX_AGE_SECONDS=300
RANK_CONF_STRICT=0
RANK_CONF_MAX_VIOLATIONS=0
